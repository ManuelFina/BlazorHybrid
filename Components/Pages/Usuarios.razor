@page "/usuarios"
@using TrabajoPracticoTres.Models
@using TrabajoPracticoTres.Services
@inject UsuarioService UsuarioService

<h3 class="mb-4">👥 Gestión de Usuarios</h3>

<div class="row">
    <div class="col-md-7">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in usuarios)
                {
                    <tr>
                        <td><img src="@u.Imagen" alt="@u.Nombre" class="rounded-circle" width="50" height="50" /></td>
                        <td>@u.Nombre</td>
                        <td>@u.Email</td>
                        <td>
                            <button class="btn btn-info btn-sm me-1" @onclick="() => VerDetalle(u.Id)">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-warning btn-sm me-1" @onclick="() => EditarUsuario(u.Id)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-danger btn-sm" @onclick="() => EliminarUsuario(u.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-5">
        @if (usuarioSeleccionado != null)
        {
            <div class="card shadow-sm">
                <img src="@usuarioSeleccionado.Imagen" class="card-img-top" alt="@usuarioSeleccionado.Nombre">
                <div class="card-body">
                    <h5 class="card-title">@usuarioSeleccionado.Nombre</h5>
                    <p class="card-text">@usuarioSeleccionado.Email</p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-secondary">Selecciona un usuario para ver detalles</div>
        }
    </div>
</div>

@code {
    private List<Usuario> usuarios = new();
    private Usuario? usuarioSeleccionado;

    protected override void OnInitialized()
    {
        usuarios = UsuarioService.GetUsuarios();
    }

    void VerDetalle(int id)
    {
        usuarioSeleccionado = UsuarioService.GetUsuarioById(id);
    }

    void EditarUsuario(int id)
    {
        // Por simplicidad, sólo mostramos detalle para edición
        usuarioSeleccionado = UsuarioService.GetUsuarioById(id);
        // Podrías abrir un formulario modal aquí
    }

    void EliminarUsuario(int id)
    {
        UsuarioService.DeleteUsuario(id);
        usuarios = UsuarioService.GetUsuarios();
        usuarioSeleccionado = null;
    }
}
