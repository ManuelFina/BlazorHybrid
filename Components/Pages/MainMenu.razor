@page "/menu"
@using TrabajoPracticoTres.Models
@inject NavigationManager Nav

<div class="container mt-4">
    <h2 class="mb-4">📚 Menú Principal</h2>

    <div class="row row-cols-1 row-cols-md-2 g-4">

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-people-fill fs-1 text-primary me-3"></i>
                    <div>
                        <h5 class="card-title">Usuarios</h5>
                        <p class="card-text">Gestión ABM de usuarios.</p>
                        <button class="btn btn-outline-primary" @onclick="@(() => Nav.NavigateTo("/usuarios"))">
                            Ir a Usuarios
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="bi bi-book-half fs-1 text-success me-3"></i>
                    <div>
                        <h5 class="card-title">Biblioteca</h5>
                        <p class="card-text">Gestión de libros, autores, etc.</p>
                        <button class="btn btn-outline-success" @onclick="@(() => Nav.NavigateTo("/libros"))">
                            Ir a Biblioteca
                        </button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
